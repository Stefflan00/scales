#!/usr/bin/env ruby

require 'scales-server'

Scales.pwd = Dir.pwd

@port   = 3000
@servers = []

arguments = ARGV.dup
while !arguments.empty? do
  argument  = arguments.shift
  @port     = arguments.shift if argument == "-p" or argument == "--port"
  @servers << argument
end

Scales::Server::Proxy::Backend.add(@servers)
Scales::Server::Proxy.run!("0.0.0.0", @port)